#!/usr/bin/env bash
# Init stilində skript, manage_my_process-i start/stop/restart edir

PID_FILE="/var/run/my_process.pid"
SCRIPT_PATH="/root/holbertonschool-shell/processes_and_signals/manage_my_process"  # manage_my_process skriptinin tam yolu

start() {
    "$SCRIPT_PATH" &               # Proses background-da işə düşür
    echo $! > "$PID_FILE"          # PID faylına yazılır
    echo "manage_my_process started"
}

stop() {
    if [ -f "$PID_FILE" ]; then
        kill "$(cat "$PID_FILE")" 2>/dev/null
        rm -f "$PID_FILE"
    fi
    echo "manage_my_process stopped"
}

restart() {
    stop
    start
    echo "manage_my_process restarted"
}

case "$1" in
    start)
        start
        ;;
    stop)
        stop
        ;;
    restart)
        restart
        ;;
    *)
        echo "Usage: manage_my_process {start|stop|restart}"
        exit 1
        ;;
esac

