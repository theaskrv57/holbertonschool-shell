#!/usr/bin/env bash
# Creates a PID file and handles signals while printing messages

PID_FILE="/var/run/myscript.pid"

# If cannot write to /var/run, fallback to /tmp
if ! touch "$PID_FILE" 2>/dev/null; then
    PID_FILE="/tmp/myscript.pid"
fi

# Write PID to file
echo $$ > "$PID_FILE"

# Function to handle SIGINT (Ctrl+C)
handle_sigint() {
    echo "Y U no love me?!"
}

# Function to handle SIGTERM
handle_sigterm() {
    echo "I hate the kill command"
    rm -f "$PID_FILE"
    exit 0
}

# Function to handle SIGQUIT
handle_sigquit() {
    rm -f "$PID_FILE"
    exit 0
}

# Set traps for signals
trap handle_sigint SIGINT
trap handle_sigterm SIGTERM
trap handle_sigquit SIGQUIT

# Infinite loop printing message
while true; do
    echo "To infinity and beyond"
    sleep 2
done

